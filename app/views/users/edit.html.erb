<%= form_for(@user) do |f| %>
  <%= label_tag(:email, 'Email:') %>
  <%= f.email_field(:email, placeholder: 'Enter your email', autofocus: '') %>

  <%= label_tag(:username, 'Username:') %>
  <%= f.text_field(:username, placeholder: 'Enter a unique username') %>
  
  <%= label_tag(:password, 'Password:') %>
  <%= f.password_field(:password, placeholder: 'Enter a strong password') %>

  <%= f.submit("Edit") %>
<% end %>